//- Gird list
.container.hoc
  .p-0.row
    .col-lg-3.pl-0
      ul.p-0.list-unstyled
        h1.topspace-30.font-15.bold
          i.fa.fa-bars 
          |  DANH MỤC SẢN PHẨM
        hr
        li MỸ PHẨM
          i.fa.fa-caret-right.float-right
        hr(style='border-top: 1px dotted #c1c1c1;')
        li TRANG SỨC
          i.fa.fa-caret-down.float-right
          ul(style='list-style-type: disc; padding-left: 25px;')
            - var list = ['Vòng tay', 'Nhẫn', 'Lắc chân', 'Phụ kiện khác', 'Giày Lười Giày Mọi'];
            each item in list
                li.pl-1= item
        hr(style='border-top: 1px dotted #c1c1c1;')
        li PHỤ KIỆN
          i.fa.fa-caret-right.float-right
        hr(style='border-top: 1px dotted #c1c1c1;')
        li NƯỚC HOA
          i.fa.fa-caret-right.float-right
        hr(style='border-top: 1px dotted #c1c1c1;')
      h1.topspace-30.font-15.bold SO SÁNH SẢN PHẨM
      hr
      p Bạn chưa có sản phẩm nào để so sánh
      h1.topspace-30.font-15.bold TAG SẢN PHẨM
      hr
      - var li = ['Hoa tai', 'Son', 'Nước hoa', 'Giày', 'Sandal', 'Áo sơ mi', 'Nước hoa', 'Trẻ em', 'Thời trang nữ']
      each item in li
        button.btn.btnsp.left= item
      .gird-list-banner.clear(style='background-image: url(images/banner2.png)')
        p.color--white.topspace-30.font-20(style='padding: 90px 30px') MANDALA STORE
    include gird-item.pug